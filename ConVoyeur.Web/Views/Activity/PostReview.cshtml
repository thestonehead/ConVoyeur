@using ConVoyeur.Data
@model PostReviewInput

@{
    var routeData = new Dictionary<string, string>
    {
        {"id", Model.ActivityId.ToString() }
    };
}

<form class="user-review" method="post" asp-action="PostReviewAsync" asp-all-route-data="routeData">
    <input asp-for="ActivityId" type="hidden" value="@Model.ActivityId" />
    <div class="form-group">
        <label asp-for="Grade"></label>
        <input asp-for="Grade" class="form-control" type="hidden" />
        <div class='rating-stars'>
            <ul id='stars'>
                <li class='star' title='Poor' data-value='1'>
                    <i class='fa fa-star fa-fw'></i>
                </li>
                <li class='star' title='Fair' data-value='2'>
                    <i class='fa fa-star fa-fw'></i>
                </li>
                <li class='star' title='Ok' data-value='3'>
                    <i class='fa fa-star fa-fw'></i>
                </li>
                <li class='star' title='Good' data-value='4'>
                    <i class='fa fa-star fa-fw'></i>
                </li>
                <li class='star' title='Excellent' data-value='5'>
                    <i class='fa fa-star fa-fw'></i>
                </li>
            </ul>
        </div>
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Review"></label>
        <textarea asp-for="Review" class="form-control"></textarea>
        <span asp-validation-for="Review" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Access"></label>
        <select asp-for="Access" class="form-control">
            <option value="@AccessSetting.Private">@nameof(AccessSetting.Private)</option>
            <option value="@AccessSetting.Public" selected="selected">@nameof(AccessSetting.Public)</option>
        </select>
        <span asp-validation-for="Access" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Post review</button>
    </div>
</form>
